#
#  OSGi TEST BUNDLE 
#

Bundle-Version:1.0.0.${tstamp}
Bundle-Name: FRAM-01 : Bundle injection (install a local bundle on the framework)
Bundle-Description: This bundle installs and starts another bundle from a local Jar file.

Private-Package: org.osgi.security.fram01.test
Test-Cases: ${test-cases}

-includeresource: {readme.md}

-buildpath: \
	osgi.enroute.base.api;version=1.0, \
	osgi.enroute.junit.wrapper;version=4.12

-runrequires: osgi.identity;filter:='(osgi.identity=org.osgi.security.fram01.test)'

-runbundles: \
	org.apache.felix.log;version='[1.0.1,1.0.2)',\
	org.osgi.security.fram01.test;version=snapshot,\
	osgi.enroute.hamcrest.wrapper;version='[1.3.0,1.3.1)',\
	osgi.enroute.junit.wrapper;version='[4.12.0,4.12.1)'
	
-runee: JavaSE-1.8

-runfw: org.eclipse.osgi