<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
<!-- BASICS -->
  <parent>
    <groupId>com.sogetiht.otb</groupId>
    <artifactId>com.sogetiht.otb.pom</artifactId>
    <version>0.10</version>
    <relativePath>../</relativePath>
  </parent>
  <groupId>com.sogetiht.otb.sysatt161</groupId>
  <artifactId>com.sogetiht.otb.sysatt161</artifactId>
  <version>0.10</version>
  <packaging>bundle</packaging>
<!-- DEPENDENCIES -->
  <dependencies>
    <dependency>
      <groupId>com.sogetiht.otb.util</groupId>
      <artifactId>com.sogetiht.otb.util</artifactId>
      <version>0.10</version>
    </dependency>
  </dependencies>
<!-- PROJECT INFORMATION -->
  <name>OTB sysatt161</name>
<!-- BUILD SETTINGS -->
  <build>
    <directory>../build/com.sogetiht.otb.hab/apps/sysatt161</directory>
    <plugins>
      <!-- Create consistent OSGi bundle -->
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <version>2.3.7</version>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-Activator>${project.artifactId}.Activator</Bundle-Activator>
            <Import-Package>
              com.sogetiht.otb.util;version=0.10,
              org.osgi.framework;version=1.3.0
            </Import-Package>
          </instructions>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>exec-maven-plugin</artifactId>
        <groupId>org.codehaus.mojo</groupId>
        <executions>
          <execution>
            <id>Change MANIFEST.MF file</id>
            <phase>install</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>${basedir}/changeManifest.sh</executable>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
